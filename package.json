{
    "name": "react-pure",
    "description": "Showcase of a pure React application.",
    "version": "1.0.0",
    "main": "index.js",
    "type": "module",
    "scripts": {
        "dev": "vite",
        "build:client": "vite build --outDir ../dist/client",
        "build:server": "vite build --outDir ../dist/server --ssr ServerApp.jsx",
        "build": "npm run build:client && npm run build:server",
        "preview": "vite preview",
        "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx}\"",
        "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\" --quiet --fix",
        "test": "echo \"Error: no test specified\" && exit 1",
        "start": "node server.js"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/devdeer-kevin/react-pure.git"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "@vitejs/plugin-react": "^2.1.0",
        "eslint": "^8.24.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-import": "^2.29.1",
        "eslint-plugin-jsx-a11y": "^6.8.0",
        "eslint-plugin-react": "^7.33.2",
        "prettier": "^3.2.4",
        "vite": "^3.1.4"
    },
    "dependencies": {
        "express": "^4.18.2",
        "react": "^18.2.0",
        "react-dom": "^18.2.0",
        "react-router-dom": "^6.21.3"
    },
    "bugs": {
        "url": "https://github.com/devdeer-kevin/react-pure/issues"
    },
    "homepage": "https://github.com/devdeer-kevin/react-pure#readme"
}
